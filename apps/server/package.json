{
	"name": "server",
	"version": "1.0.20",
	"private": true,
	"scripts": {
		"deploy": "wrangler types && wrangler deploy",
		"dev": "wrangler types && wrangler dev",
		"start": "wrangler types && wrangler dev",
		"lint": "biome check",
		"lint:fix": "pnpm lint --write",
		"cf-typegen": "wrangler types",
		"dev:cron": "wrangler types && wrangler dev --test-scheduled",
		"auth:generate": "ALCHEMY_STAGE=dev npx --yes @better-auth/cli@latest generate --config src/lib/auth.ts --output src/db/authModels.ts -y",
		"db:generate": "drizzle-kit generate",
		"db:migrate:dev": "wrangler d1 migrations apply imob-prod-db --local",
		"db:migrate:prod": "wrangler d1 migrations apply imob-prod-db --remote",
		"test": "vitest run",
		"studio": "drizzle-kit studio",
		"studio:prod": "ALCHEMY_STAGE=dev drizzle-kit studio",
		"drizzle:up": "drizzle-kit up",
		"amend": "drizzle-kit drop && drizzle-kit generate"
	},
	"dependencies": {
		"@hono/otel": "^1.1.0",
		"@hono/zod-openapi": "^1.2.0",
		"@microlabs/otel-cf-workers": "1.0.0-rc.52",
		"@opentelemetry/api": "^1.9.0",
		"@orpc/server": "^1.13.2",
		"@scalar/hono-api-reference": "^0.9.30",
		"better-auth": "1.4.10",
		"better-auth-cloudflare": "^0.2.9",
		"drizzle-orm": "^0.44.7",
		"drizzle-zod": "^0.8.3",
		"hono": "^4.11.3",
		"hono-rate-limiter": "^0.5.3",
		"jsonata": "^2.1.0",
		"resend": "^6.6.0",
		"ua-parser-js": "^2.0.7",
		"ulid": "^3.0.2",
		"zod": "^4.3.4"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.10",
		"@cloudflare/vitest-pool-workers": "^0.9.14",
		"@cloudflare/workers-types": "^4.20260109.0",
		"@types/jest": "^30.0.0",
		"@types/mimetext": "^2.0.4",
		"@types/node": "22.13.0",
		"@types/service-worker-mock": "^2.0.4",
		"@vitest/coverage-istanbul": "^3.2.4",
		"@vitest/coverage-v8": "^3.2.4",
		"drizzle-kit": "^0.31.8",
		"tsx": "^4.21.0",
		"typescript": "^5.9.3",
		"vite-tsconfig-paths": "^5.1.4",
		"vitest": "^3.2.4",
		"wrangler": "^4.58.0"
	}
}
